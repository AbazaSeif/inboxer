{
  "private": true,
  "name": "inboxer",
  "productName": "Inboxer",
  "version": "0.1.0",
  "description": "Simple client for Google Inbox",
  "author": {
    "name": "Denys Dovhan",
    "email": "denysdovhan@gmail.com",
    "url": "https://denysdovhan.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/denysdovhan/inboxer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/denysdovhan/inboxer.git"
  },
  "bugs": {
    "url": "https://github.com/denysdovhan/inboxer/issues"
  },
  "keywords": [
    "client",
    "inbox",
    "gmail",
    "electron",
    "app"
  ],
  "main": "app/main",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "lint": "eslint app",
    "test": "npm run lint && npm run dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac --linux",
    "format": "prettier-eslint --write **/*.js"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.42.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "prettier-eslint-cli": "^4.4.0"
  },
  "dependencies": {
    "electron-context-menu": "^0.9.1",
    "electron-dl": "^1.10.0",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^1.3.0",
    "minimatch-all": "^1.1.0"
  },
  "build": {
    "appId": "com.denysdovhan.inboxer",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
